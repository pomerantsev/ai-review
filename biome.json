{
	"$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "space",
		"indentWidth": 2,
		"lineWidth": 100
	},
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedFunctionParameters": "error",
				"noUnusedImports": "error",
				"noUnusedPrivateClassMembers": "error",
				"noUnusedVariables": "error",
				"useParseIntRadix": "error"
			},
			"nursery": {
				"noShadow": "error"
			},
			"style": {
				"noNonNullAssertion": "off",
				"useImportType": "error"
			},
			"suspicious": {
				"noExplicitAny": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	},
	"json": {
		"parser": {
			"allowComments": true
		}
	},
	"overrides": [
		{
			"includes": [
				"**/packages/accented/src/**/*.ts",
				"!**/packages/accented/src/**/*.test.ts"
			],
			"linter": {
				"rules": {
					"correctness": {
						"useImportExtensions": "error"
					},
					"style": {
						"noNonNullAssertion": "error"
					},
					"suspicious": {
						"noExplicitAny": "error"
					}
				}
			}
		},
		{
			"includes": ["**/packages/**/*/*/**/*.ts"],
			"linter": {
				"rules": {
					"style": {
						"noDefaultExport": "error"
					}
				}
			}
		},
		{
			"includes": ["**/*.astro"],
			"linter": {
				"rules": {
					"correctness": {
						"noUnusedVariables": "off",
						"noUnusedImports": "off"
					}
				}
			}
		}
	]
}
